<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700.0" prefWidth="900.0"
            style="-fx-background-color: linear-gradient(to bottom, #2563EB, #60A5FA);"
            xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.gdse.studentmanagementsystem.Controller.HomeFormController">

   <children>
      <!-- Sidebar (White Card Style) -->
      <VBox fx:id="HomeAnchorPane" layoutX="30.0" layoutY="30.0" prefWidth="240.0" prefHeight="640.0"
            spacing="20.0" alignment="TOP_CENTER"
            style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 4);">

         <Label text="MENU" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1E293B;" />

         <Button fx:id="btnStudent" text="Student" onAction="#btnStudentOnAction"
                 style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"
                 prefWidth="160.0" prefHeight="40.0" />
         <Button fx:id="btnCourse" text="Course" onAction="#btnCourseOnAction"
                 style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-background-radius: 10;"
                 prefWidth="160.0" prefHeight="40.0" />
         <Button fx:id="btnLecture" text="Lecture" onAction="#btnLectureOnAction"
                 style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-background-radius: 10;"
                 prefWidth="160.0" prefHeight="40.0" />
         <Button fx:id="btnPayment" text="Payment" onAction="#btnPaymentOnAction"
                 style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-background-radius: 10;"
                 prefWidth="160.0" prefHeight="40.0" />
         <Button fx:id="btnSalary" text="Salary" onAction="#btnSalaryOnAction"
                 style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-background-radius: 10;"
                 prefWidth="160.0" prefHeight="40.0" />
         <Button fx:id="btnAttendance" text="Attendance" onAction="#btnAttendanceOnAction"
                 style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-background-radius: 10;"
                 prefWidth="160.0" prefHeight="40.0" />
         <Button fx:id="btnDepartment" text="Department" onAction="#btnDepartmentOnAction"
                 style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-background-radius: 10;"
                 prefWidth="160.0" prefHeight="40.0" />

         <Button fx:id="btnLogout" text="Logout" onAction="#btnLogoutOnAction"
                 style="-fx-background-color: #EF4444; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"
                 prefWidth="160.0" prefHeight="40.0" />
      </VBox>

      <!-- Main Content Area -->
      <AnchorPane fx:id="loadingAnchorPane" layoutX="300.0" layoutY="30.0" prefWidth="570.0" prefHeight="640.0"
                  style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);" />
   </children>
</AnchorPane>
