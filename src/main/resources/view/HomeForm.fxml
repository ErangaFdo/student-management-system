<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom, #2563EB, #60A5FA);" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.gdse.studentmanagementsystem.Controller.HomeFormController">

   <children>
      <!-- Sidebar (White Card Style) -->
      <VBox fx:id="HomeAnchorPane" alignment="TOP_CENTER" layoutX="30.0" layoutY="30.0" prefHeight="640.0" prefWidth="240.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 4);">

         <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1E293B;" text="MENU" />

         <Button fx:id="btnStudent" onAction="#btnStudentOnAction" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Student" />
         <Button fx:id="btnCourse" onAction="#btnCourseOnAction" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-background-radius: 10;" text="Course" />
         <Button fx:id="btnLecture" onAction="#btnLectureOnAction" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-background-radius: 10;" text="Lecture" />
         <Button fx:id="btnPayment" onAction="#btnPaymentOnAction" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-background-radius: 10;" text="Payment" />
         <Button fx:id="btnSalary" onAction="#btnSalaryOnAction" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-background-radius: 10;" text="Salary" />
         <Button fx:id="btnAttendance" onAction="#btnAttendanceOnAction" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-background-radius: 10;" text="Attendance" />
         <Button fx:id="btnDepartment" onAction="#btnDepartmentOnAction" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-background-radius: 10;" text="Department" />

         <Button fx:id="btnLogout" onAction="#btnLogoutOnAction" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #EF4444; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Logout" />
      </VBox>

      <!-- Main Content Area -->
      <AnchorPane fx:id="loadingAnchorPane" layoutX="300.0" layoutY="30.0" prefHeight="640.0" prefWidth="570.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);" />
   </children>
</AnchorPane>
