<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="courseAnchorPane" prefHeight="700.0" prefWidth="658.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.gdse.studentmanagementsystem.Controller.CourseController">

    <children>
        <Label layoutX="280.0" layoutY="22.0" prefHeight="35.0" prefWidth="100.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1E293B;" text="Courses" />

        <!-- Labels + Fields -->
        <VBox layoutX="47.0" layoutY="85.0" spacing="12.0">
            <HBox spacing="20.0">
                <Label prefWidth="120.0" text="Course ID" />
                <TextField fx:id="lblCourseId" prefWidth="300.0" promptText="S001" style="-fx-background-radius: 10;" />
            </HBox>
            <HBox spacing="20.0">
                <Label prefWidth="120.0" text="Course Name" />
                <TextField fx:id="lblCourseName" prefWidth="300.0" promptText="John Doe" style="-fx-background-radius: 10;" />
            </HBox>
            <HBox spacing="20.0">
                <Label prefWidth="120.0" text="Course Payment" />
                <TextField fx:id="lblCoursePayment" prefWidth="300.0" promptText="123 Street, City" style="-fx-background-radius: 10;" />
            </HBox>
            <HBox spacing="20.0">
                <Label prefWidth="120.0" text="Course Diuration" />
                <TextField fx:id="lblCourseDiuration" prefWidth="300.0" promptText="YYYY-MM-DD" style="-fx-background-radius: 10;" />
            </HBox>
            <HBox spacing="20.0">
                <Label prefWidth="120.0" text="Student ID" />
                <TextField fx:id="lblStudentId" prefWidth="300.0" promptText="20" style="-fx-background-radius: 10;" />
            </HBox>
            <HBox spacing="20.0" />
        </VBox>

        <!-- Action Buttons -->
        <HBox layoutX="80.0" layoutY="310.0" spacing="15.0">
            <Button fx:id="btnSave" onAction="#btnSaveOnAction" prefWidth="100.0" style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-background-radius: 10;" text="SAVE" />
            <Button fx:id="btnUpdate" onAction="#btnUpdateOnAction" prefWidth="100.0" style="-fx-background-color: #2563EB; -fx-text-fill: white; -fx-background-radius: 10;" text="UPDATE" />
            <Button fx:id="btnDelete" onAction="#btnDeleteOnAction" prefWidth="100.0" style="-fx-background-color: #EF4444; -fx-text-fill: white; -fx-background-radius: 10;" text="DELETE" />
            <Button fx:id="btnClear" onAction="#btnClearOnAction" prefWidth="100.0" style="-fx-background-color: #64748B; -fx-text-fill: white; -fx-background-radius: 10;" text="CLEAR" />
        </HBox>

        <!-- Table -->
        <TableView fx:id="courseTable" layoutX="20.0" layoutY="370.0" onMouseClicked="#tableOnClick" prefHeight="300.0" prefWidth="620.0" style="-fx-background-radius: 10; -fx-border-radius: 10;">
            <columns>
                <TableColumn fx:id="clmId" prefWidth="100.0" text="Course ID" />
                <TableColumn fx:id="clmName" prefWidth="120.0" text="Course Name" />
                <TableColumn fx:id="clmPayment" prefWidth="142.4000244140625" text="Course Payment" />
                <TableColumn fx:id="clmDiuration" prefWidth="144.79998779296875" text="Course Diuration" />
                <TableColumn fx:id="clmStudentId" prefWidth="112.79998779296875" text="Student ID" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
